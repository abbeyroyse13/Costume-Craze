@model IEnumerable<CostumeCraze.Auth.Models.ProductType>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Add New Product Type</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <span style="color:white">@Html.DisplayNameFor(model => model.Id)</span>
</th>
            <th>
                <span style="color:white">@Html.DisplayNameFor(model => model.Name)</span>
</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <span style="color:darkorange">@Html.DisplayFor(modelItem => item.Id)</span>
</td>
            <td>
                <span style="color:darkorange">@Html.DisplayFor(modelItem => item.Name)</span>
</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
